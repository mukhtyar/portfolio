---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectWrapper from "../components/ProjectWrapper.svelte";

const projects = Astro.fetchContent<MarkdownFrontmatter>("./project/**/*.md")
  .filter(({ endDate }) => !!endDate)
  .sort(
    (a, b) => new Date(b.endDate).valueOf() - new Date(a.endDate).valueOf()
  );

//const projects = Astro.fetchContent("./project/**/*.md")
---

<BaseLayout title="Shruti Mukhtyar" description="Portfolio" path="/projects">
  <div class="container">
    <h1>All Projects</h1>
    <ProjectWrapper {projects} />
  </div>
</BaseLayout>
