---
import BaseLayout from "./BaseLayout.astro";
import Button from "../components/Button.svelte";
import { projectDateOptions } from "../data/constants";

const { frontmatter } = Astro.props;
---

<BaseLayout
  title={frontmatter.title}
  description={frontmatter.description}
  path={frontmatter.url}
>
  <section>
    <div class="container">
      <div class="project-top-content">
        <h1>{frontmatter.description}</h1>
        <Button href={frontmatter.url} target={true}>View Website</Button>
      </div>

      <div class="project-about-grid">
        <div class="project-about-wrapper">
          <div class="project-about-title">Services</div>
          <ul>
            {frontmatter.services.map((d) => <li>{d}</li>)}
          </ul>
        </div>
        <div class="project-about-wrapper">
          <div class="project-about-title">Client</div>
          <ul>
            {frontmatter.clients.map((d) => <li>{d}</li>)}
          </ul>
        </div>
        <div class="project-about-wrapper">
          <div class="project-about-title">Date</div>
          <div>
            {new Date(frontmatter.startDate).toLocaleDateString(
              "en-US",
              projectDateOptions
            )} - {new Date(frontmatter.endDate).toLocaleDateString(
              "en-US",
              projectDateOptions
            )}
          </div>
        </div>
      </div>

      <div class="project-divider"></div>

      <div class="project-content">
        <slot />
      </div>
    </div>
    <div class="project-screenshots">
      {frontmatter.screenshots.map((d) => <img src={`/assets/projects/${d.img}`} alt={d.alt} title={d.title} />)}
    </div>
  </section>
</BaseLayout>

<style>
  .project-top-content {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--size-6);
    flex-wrap: wrap;
    align-items: first baseline;
  }

  .project-about-grid {
    display: grid;
    grid-column-gap: var(--size-1);
    grid-row-gap: var(--size-2);
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    grid-template-rows: auto;
  }

  .project-about-title {
    margin-bottom: var(--size-1);
    color: var(--gray-9);
    font-size: var(--font-size-3);
    font-weight: var(--font-weight-5);
  }

  .project-divider {
    width: 100%;
    height: 1px;
    background-color: var(--gray-5);
    margin: var(--size-6) 0;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .project-screenshots {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: var(--size-4);
    padding: var(--size-6);
  }

  .project-screenshots img {
    border: 15px solid #f3e5f9;
    border-radius: var(--radius-2);
    height: auto;
    object-fit: cover;
  }

  :global(.project-content p) {
    margin-top: var(--size-4);
  }

  :global(.project-content h2) {
    margin-top: var(--size-6);
  }

  /* My Role section specific styling */
  :global(.project-content h2#my-role) {
    font-size: var(--font-size-6);
    margin-bottom: var(--size-2);
  }

  :global(.project-content h2#my-role + p) {
    font-style: italic;
    color: var(--gray-7);
    margin-bottom: var(--size-6);
  }

  /* Style bullets under My Role with purple circles */
  :global(.project-content h2#my-role ~ ul) {
    list-style: none;
    padding-left: 0;
  }

  :global(.project-content h2#my-role ~ ul li) {
    display: flex;
    gap: var(--size-4);
    margin-bottom: var(--size-6);
    align-items: flex-start;
  }

  :global(.project-content h2#my-role ~ ul li::before) {
    content: '';
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 48px;
    width: 48px;
    height: 48px;
    background-color: var(--brand);
    border-radius: 50%;
    flex-shrink: 0;
  }

  :global(.project-content h2#my-role ~ ul li strong) {
    display: block;
    font-size: var(--font-size-4);
    margin-bottom: var(--size-1);
  }

  @media only screen and (max-width: 1024px) {
    h1 {
      margin: var(--size-4) 0;
      font-size: var(--font-size-6);
    }

    .project-screenshots {
      grid-template-columns: 1fr;
    }
  }
</style>
